<%= render 'shared/errors', obj: @article %>

<div class="bg-white container mx-auto rounded shadow-lg p-6">
  <%= form_for(@article, :html => {role: "form"}) do |f| %>
  <div class="w-3/4 mx-auto">
    <%= f.text_field :title, placeholder: "Title of Article", autofocus: true,
            class:"form-title fancy-font block border border-red-darkest focus:border-red-darkest focus:shadow-lg p-4 rounded shadow text-center w-full" %>
  </div>

  <div class="w-3/4 mx-auto">
    <%= f.text_area :description, rows: 27, class: "form-description normal-font block border border-red-darkest focus:border-red-darkest focus:shadow-lg mx-auto my-12 p-6 rounded shadow w-full", placeholder: "Body" %>
  </div>

  <div class="category-boxes py-6 text-center">
    <h3 class="fancy-font pb-6 burgandy text-2xl underline">Category</h3>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
    <%= cb.label(class: "inline-flex mx-6 normal-font text-lg burgandy") {cb.check_box(class: "checkbox mr-2") + cb.text} %>
    <% end %>
  </div>

  <%= f.submit class: "py-3 bg-white block border border-green-darker hover:bg-green-darkest hover:text-green-lightest mx-auto my-4 no-underline normal-font rounded shadow-lg text-green-darkest w-48" %>
  <% end %>

  <div class="py-16 text-center">
    <%= link_to "Cancel Request and Return to Articles Listing", articles_path, class: "burgandy fancy-font hover:underline no-underline" %>
  </div>
</div>