<h1 class="fancy-font mb-8 pt-20 text-center text-purple-darker">My Favorite Books & Audio</h1>
<div class="container mx-auto">
  <div class="category-menu">
    <ul class="flex flex-wrap w-full justify-center p-0">
      <li class="text-center p-2 border-r border-grey-light">
        <button id="showall" class="normal-font text-sm text-purple-darker hover:text-purple-light">Show All</button>
      </li>
      <% if @categories.any?
               then %>
        <% @categories.each do |category| %>
          <%if (category == @categories.last) %>
            <li class="text-center p-2">
              <button id="misc" class="normal-font text-sm text-purple-darker hover:text-purple-light">Miscellaneous</button>
            </li>
            <% break %><% end %>
            <li class="text-center p-2 border-r border-grey-light">
              <button id="<%= category.html_selector %>" class="normal-font text-sm text-purple-darker hover:text-purple-light"><%= category.name %></button>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="container mx-auto">
    <div class="covers flex flex-wrap my-8 w-full">
      <% if @books.any?
               then %>
        <% @books.each do |book| %>
          <% if (book.covers.attached? || !book.image_address.nil?) %>
            <div class="<%= book.book_category.html_selector %> cover lg:w-1/4 md:w-1/3 sm:w-1/2 text-center my-12 relative">
              <% if master_logged_in? %>
                <a href="<%= edit_book_path(book) %>" class="absolute bg-white edit-book-link no-underline px-3 py-2 right-0 rounded-b shadow text-blue top-0 z-10 hover:underline">Edit</a>
              <%end %>
              <a href="<%= book.book_link %>" target="_blank" rel="nofollow" class="no-underline">
                <% if (book.covers.attached?) %>
                  <picture>
                    <source srcset="<%= book.get_webp_attachment %>" type="image/webp" class="mb-3 shadow" alt="<%= book.image_alt %>">
                    <source srcset="<%= book.get_jpeg_attachment %>" type="image/jpg">
                    <img src="<%= book.get_jpeg_attachment %>" class="mb-3 shadow" alt="<%= book.image_alt %>"/>
                  </picture>
                <% else %>
                  <picture>
                    <source srcset="<%= "#{image_path(book.image_address)}.webp" %>" type="image/webp" class="mb-3 shadow" alt="<%= book.image_alt %>">
                    <source srcset="<%= image_path(book.image_address) %>" type="image/jpg">
                    <img src="<%= image_path(book.image_address) %>" class="mb-3 shadow" alt="<%= book.image_alt %>"/>
                  </picture>
                <% end %>
              </a>
              <div class="book-description bg-purple-lightest w-4/5 p-4 rounded-lg mx-auto">
                <p class="fancy-font text-md text-purple-darkest"><%= book.title %></p>
                <p class="normal-font text-sm text-purple-darkest py-2"><%= book.subtitle %></p>
                <p class="normal-font text-sm text-purple-darkest">by
                  <%= book.author %></p>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>

  <% content_for :javascripts do %>
    <script>

      $(function () {
        $('.category-menu button').click(function () {
          var get_id = this.id;
          var get_current = $('.covers .' + get_id);

          $('.cover')
            .not(get_current)
            .hide(500);
          get_current.show(500);
        });

        $('#showall').click(function () {
          $('.cover').show(500);
        });
      });
      $('.desktop .nav-link')
        .removeClass('burgandy')
        .addClass('text-purple-darkest');
    </script>
  <% end %>
