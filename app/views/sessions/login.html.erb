<h1 class="text-center fancy-font py-16">Log in</h1>
<div class="container mx-auto text-center">
  <%= form_for(:session, :html => {class: "w-full", role: "form"}, url: login_path) do |f| %>
  <div class="mb-10">
    <%= f.label :email, class: "normal-font" %>
    <div class="mb-10">
      <%= f.email_field :email, placeholder: "Email", autofocus: true, 
          class: "bg-gray-200 appearance-none border-2 border-yellow-offset hover:border-gray-700rounded-sm py-4 px-6 sm:w-1/2 md:1/4 lg:w-1/4 text-black text-center" %>
    </div>
  </div>

  <div class="mb-10">
    <%= f.label :password, class: "normal-font" %>
    <div>
      <%= f.password_field :password, autocomplete: "off", 
        class: "bg-gray-200 appearance-none border-2 border-yellow-offset hover:border-gray-700rounded-sm py-4 px-6 sm:w-1/2 md:1/4 lg:w-1/4 text-black text-center" %>
    </div>
  </div>


  <div class="my-6"">
    <%= f.submit "Log in", 
      class: "bg-white block border border-red-800hover:bg-red-900 burgandy hover:text-red-600-100 mx-auto my-4 no-underline normal-font py-3 rounded shadow-lg sm:w-1/2 md:1/4 lg:w-1/4" %>
  </div>


  <% end %>
  <div class="fancy-font my-16">
    <%= link_to "Cancel Request and Return Home", root_path, class: "no-underline" %>
  </div>
</div>