<% if current_page?(root_path) %>
<span>
  <%= link_to category.name, category_path(category), 
      class: "bg-blue-darker hover:bg-blue-darkest m-2 no-underline p-1 rounded text-blue-lightest normal-font" %> &nbsp;
</span>
<% else %>
<span>
  <%= link_to category.name, category_path(category), 
      class: "bg-red-darker hover:bg-red-darkest m-2 no-underline p-1 rounded text-red-lightest normal-font" %> &nbsp;
</span>
<% end %>