<section class="bg-center bg-cover hero min-h-screen sm:bg-bottom">
  <div class="home-content js--fadeInLeft absolute align-baseline mx-auto pin-l pin-r md:px-8 md:py-12 w-2/3">
    <h1 class="fancy-font text-5xl text-blue-lightest text-center">Alex Younger</h1>
    <p class="fancy-font py-2 sm:text-blue-lighter text-center text-lg text-yellow-lightest">Web Developer, Investor, Marketing, Entrepreneur</p>
  </div>
</section>
<section class="about-home bg-grey-lighter py-16 w-full px-4">
<h2 class="fancy-font text-center text-blue pb-8">About Me</h2>
  <div class="flex flex-wrap justify-center rounded-lg shadow text-lg mx-auto lg:w-3/4 bg-white home-content js--fadeInLeft">
    <div class="headshot w-full sm:w-1/2">
      <picture>
        <source srcset="<%= image_path("headshot3_700.png.webp") %>" type="image/webp">
        <source srcset="<%= image_path("headshot3_700.png") %>" type="image/png">
        <img src="<%= image_path("headshot3_700.png") %>" class="flex sm:mt-10 mx-auto relative text-center" width="315" alt="alex younger developer marketing about me"/>
      </picture>
    </div>
    <div class="aboutme-description leading-normal normal-font p-8 w-full sm:w-1/2">
      <p class="py-2">I build and maintain websites for an extensive list of small and large companies.</p>
      <p class="py-2">I am currently building a side business called Hazlitt Tech LLC, a data brokerage for financial markets.</p>
      <p class="py-2">I consult businesses on best practices for Google Ad Campaigns, Analytics, and content marketing techniques.</p>
      <p class="py-2">Check out my latest
        <a href="<%= projects_path %>" class="text-blue hover:text-blue-darkest">projects</a>.</p>
      <a href="<%= about_path %>" class="bg-white block border border-blue-darker hover:bg-blue-darkest text-blue button hover:text-blue-lightest text-center mx-auto my-4 no-underline normal-font py-3 rounded shadow-lg w-48">
        My Story
      </a>
    </div>   
  </div>
</section>
<section class="skills bg-white py-16 w-full px-4">
<h2 class="fancy-font text-center text-blue">Skills</h2>
<div class="flex mx-auto mt-8">
      <picture class="mx-auto">
        <source srcset="<%= image_path("blueskillscloud.png.webp") %>" type="image/webp" class="w-full" alt="skills cloud"> 
        <source srcset="<%= image_path("blueskillscloud.png") %>" type="image/jpg">
        <img src="<%= image_path("blueskillscloud.png") %>" class="block mx-auto" alt="skills cloud" />
      </picture>
    </div>
</section>
<section class="articles-home py-16 bg-grey-lighter">
  <div class="container mx-auto p-1 text-center">
    <h2 class="fancy-font text-blue">Latest Blog Posts</h2>
    <a href="<%= articles_path %>" class="bg-white block border border-blue-darker text-blue button hover:text-blue-lightest hover:bg-blue-darkest mx-auto my-4 no-underline normal-font py-3 rounded shadow-lg w-48">
      View All</a>
    <% if @articles.any?
           then %>
      <% @articles.each do |article| %>
        <a href="<%= article_path(article) %>" class="no-underline text-blue">
          <div class="home-content js--fadeInLeft teaser bg-white block border border-grey-light mx-auto my-8 py-10 rounded shadow hover:shadow-lg md:w-4/5">
            <h2 class="fancy-font text-blue"><%= article.title %></h2>
            <div class="leading-normal normal-font p-8 text-black text-lg">
              <% if article.description.blank? then %>
                <%= truncate(strip_tags(article.editor1), length: 600) %>
              <% else %>
                <%= truncate(strip_tags(article.description), length: 600) %>
              <% end %>
            </div>
            <small class="block text-blue mx-auto px-6">Created by
              <%= article.user.username if article.user %>
              <%= time_ago_in_words(article.created_at) %>
              ago, Last updated:
              <%= time_ago_in_words(article.updated_at) %>
              ago
            </small>
            <% if article.categories.any? %>
              <p class="text-blue py-6 normal-font">Categories:
                <%= render article.categories %></p>
            <% end %>
          </div>
        </a>
      <% end %>
    <% end %>
  </div>
</section>
<section class="watchlist-home home-content js--fadeInLeft py-16 px-4">
  <h2 class="fancy-font text-blue text-center py-6">My Stock Watchlist</h2>
  <p class="py-6 text-center normal-font">I keep a close eye on markets; here's what I'm looking at right now:</p>
  <%= render 'partials/watchlist' %>
</section>
<!-- Scroll Reveal -->
<% content_for :javascripts do %>
  <script>
    $(document).ready(function () {
      window.sr = ScrollReveal();
      if ($(window).width() < 768) {
        $('.home-content').removeClass('js--fadeInRight');
        $('.home-content').removeClass('js--fadeInLeft');
      } else {
        sr.reveal('.js--fadeInLeft', {
          origin: 'left',
          distance: '300px',
          easing: 'ease-in-out',
          duration: 800
        });
        sr.reveal('.js--fadeInRight', {
          origin: 'right',
          distance: '300px',
          easing: 'ease-in-out',
          duration: 800
        });
      }
    });
    $('.desktop .nav-link')
      .removeClass('burgandy')
      .addClass('text-blue-lightest');
  </script>
<% end %>