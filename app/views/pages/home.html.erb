<% content_for :javascripts do %>
<script>
  window.addEventListener("load", function () {
    setTimeout(reveal, 2000);
  }, false);

  function reveal() {
    $('.js--fadeInLeft').show()
    window.sr = ScrollReveal();
    if ($(window).width() < 768) {
      $('.home-content').removeClass('js--fadeInLeft');
    } else {
      sr.reveal('.js--fadeInLeft', {
        origin: 'left',
        distance: '300px',
        easing: 'ease-in-out',
        duration: 800
      });
    }
    $('#generator-notice').fadeOut('slow');
  }
</script>
<% end %>