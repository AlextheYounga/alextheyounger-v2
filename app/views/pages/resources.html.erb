<section class="resources py-16">
  <h1 class="fancy-font text-center burgandy">Resources</h1>
  <p class="text-center text-lg py-4 normal-font text-black">A collection of useful materials, research, and ideas</p>

  <div class="bg-white container mx-auto px-4 py-16 rounded-lg shadow-lg text-center">
    <h2 class="fancy-font burgandy text-center py-8">Economic & Investment Research</h2>
    <div class="flex flex-wrap">
      <div class="sm:w-1/2">
        <a class="no-underline" target="_blank" href="<%= image_path("EconomicDatabyCountry.xlsx")%>">
          <div class="bg-orange-lightest container mx-auto sm:w-3/4 py-4 mb-16 rounded-lg shadow-lg text-center">
            <h3 class="text-orange-darkest text-xl fancy-font p-8">Leading Economic Indicators Scraped from 200 Countries</h3>
              <picture>
                <source srcset="<%= image_path("world-map.jpg.webp") %>" type="image/webp">
                <source srcset="<%= image_path("world-map.jpg") %>" type="image/jpg">
                <img class="rounded w-3/4" src="<%= image_path("world-map.jpg") %>" alt="alex younger developer economic research world economics" />
              </picture>
              <h3 class="text-orange-darkest text-xl fancy-font py-2">Download</h3>
          </div>
        </a>
      </div>
      <div class="sm:w-1/2">
        <a class="no-underline" target="_blank" href="<%= image_path("Russell3000financials.xlsx")%>">
          <div class="bg-purple-lightest container mx-auto py-4 rounded-lg shadow-lg sm:w-3/4 text-center">
            <h3 class="text-purple-darkest text-xl fancy-font p-8">Financial Statistics for Every Stock on the Russell 3000</h3>
              <picture>
                <source srcset="<%= image_path("russell.png.webp") %>" type="image/webp">
                <source srcset="<%= image_path("russell.png") %>" type="image/png">
                <img class="rounded w-3/4" src="<%= image_path("russell.png") %>" alt="alex younger developer economic research russell 3000 download" />
              </picture>
              <h3 class="text-purple-darkest text-xl fancy-font py-2">Download</h3>
          </div>
        </a>
      </div>
    </div>
  </div>

  <div class="bg-white container mx-auto px-4 py-16 my-16 rounded-lg shadow-lg text-center">
    <div class="sm:w-1/2 mx-auto">
      <a class="no-underline" target="_blank" href="https://github.com/AlextheYounga/trading-economics-scraper" rel="nofollow">
      <h2 class="fancy-font burgandy text-center pb-8">Web Scraper Tool for Economic Research</h2>
      <picture>
        <source srcset="<%= image_path("github-scraper.jpg.webp") %>" type="image/webp">
        <source srcset="<%= image_path("github-scraper.jpg") %>" type="image/jpg">
        <img src="<%= image_path("github-scraper.jpg") %>" alt="alex younger developer economic research russell 3000 download" />
      </picture>
      </a>
    </div>
  </div>

  <div class="bg-white container mx-auto px-4 py-16 my-16 rounded-lg shadow-lg text-center">
      <h2 class="fancy-font burgandy text-center pb-8">Countries With Some of the Best Economies</h2>
        <%= render 'partials/countries_table' %>
    </div>


  <div class="my-16 bg-white container mx-auto px-4 py-16 rounded-lg shadow-lg text-center">
    <h2 class="fancy-font burgandy text-center pb-8">My Stock Watchlist</h2>
    <%= render 'partials/watchlist' %>
  </div>
</section>
<!-- Stock Result -->
<% content_for :javascripts do %>
<script>

  $('#stock-lookup-form').on('ajax:complete', function (event, data, status) {
    $('#results').html(data.responseText).show();
  });

</script>
<% end %>