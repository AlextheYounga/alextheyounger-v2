<h1 class="fancy-font mb-8 pt-20 text-center text-purple-darker">My Favorite Books & Audio</h1>
<div class="container mx-auto">    
    <div class="category-menu">
        <ul class="flex flex-wrap w-full justify-center p-0">
            <li class="text-center p-2 border-r border-grey-light"><button id="showall" class="normal-font text-sm text-purple-darker hover:text-purple-light">Show All</button></li>
            <li class="text-center p-2 border-r border-grey-light"><button id="better-living" class="normal-font text-sm text-purple-darker hover:text-purple-light">Better Living</button></li>
            <li class="text-center p-2 border-r border-grey-light"><button id="philosophy" class="normal-font text-sm text-purple-darker hover:text-purple-light">Philosophy</button></li>
            <li class="text-center p-2 border-r border-grey-light"><button id="peopleskill" class="normal-font text-sm text-purple-darker hover:text-purple-light">People Skills</button></li>
            <li class="text-center p-2 border-r border-grey-light"><button id="econ" class="normal-font text-sm text-purple-darker hover:text-purple-light">Economics</button></li>
            <li class="text-center p-2 border-r border-grey-light"><button id="history" class="normal-font text-sm text-purple-darker hover:text-purple-light">History</button></li>
            <li class="text-center p-2 border-r border-grey-light"><button id="finance" class="normal-font text-sm text-purple-darker hover:text-purple-light">Finance</button></li>
            <li class="text-center p-2 border-r border-grey-light"><button id="tech" class="normal-font text-sm text-purple-darker hover:text-purple-light">Technology</button></li>
            <li class="text-center p-2 border-r border-grey-light"><button id="science" class="normal-font text-sm text-purple-darker hover:text-purple-light">Science</button></li>
            <li class="text-center p-2 border-r border-grey-light"><button id="psych" class="normal-font text-sm text-purple-darker hover:text-purple-light">Psychology</button></li>
            <li class="text-center p-2 border-r border-grey-light"><button id="productivity" class="normal-font text-sm text-purple-darker hover:text-purple-light">Productivity</button></li>
            <li class="text-center p-2 border-r border-grey-light"><button id="autobio" class="normal-font text-sm text-purple-darker hover:text-purple-light">Autobiography</button></li>
            <li class="text-center p-2 border-r border-grey-light"><button id="pol" class="normal-font text-sm text-purple-darker hover:text-purple-light">Politics</button></li>
            <li class="text-center p-2 border-r border-grey-light"><button id="biz" class="normal-font text-sm text-purple-darker hover:text-purple-light">Business</button></li>
            <li class="text-center p-2"><button id="misc" class="normal-font text-sm text-purple-darker hover:text-purple-light">Miscellaneous</button></li>
        </ul>
    </div>
</div>

<div class="container mx-auto">
    <div class="covers flex flex-wrap my-8 w-full">
        <% if @books.any?
               then %>
        <% @books.each do |book| %>
        <div class="<%= book.category %> cover lg:w-1/4 md:w-1/3 sm:w-1/2 text-center my-12">
            <a href="<%= book.book_link %>" target="_blank" rel="nofollow" class="no-underline">
                <picture>
                    <source srcset="<%= image_path("#{book.image_address}.webp") %>" type="image/webp" class="mb-3 shadow" alt="<%= book.image_alt %>"> 
                    <source srcset="<%= image_path("#{book.image_address}") %>" type="image/jpg">
                    <img src="<%= image_path("#{book.image_address}") %>" class="mb-3 shadow" alt="<%= book.image_alt %>" />
                </picture>
            </a>
            <div class="book-description bg-purple-lightest w-4/5 p-4 rounded-lg mx-auto">
                <p class="fancy-font text-md text-purple-darkest"><%= book.title %></p>
                <p class="normal-font text-sm text-purple-darkest py-2"><%= book.subtitle %></p>
                <p class="normal-font text-sm text-purple-darkest">by <%= book.author %></p>
            </div>
        </div>
        <% end %>
        <% end %>
    </div>
</div>

<% content_for :javascripts do %>
<script>    

    $(function () {
        $('.category-menu button').click(function () {
            var get_id = this.id;
            var get_current = $('.covers .' + get_id);

            $('.cover').not(get_current).hide(500);
            get_current.show(500);
        });


        $('#showall').click(function () {
            $('.cover').show(500);
        });
    });
    $('.desktop .nav-link').removeClass('burgandy').addClass('text-purple-darkest');
</script>
<% end %>