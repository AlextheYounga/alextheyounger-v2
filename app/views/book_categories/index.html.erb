<section class="category-index pb-16">
  <div class="pb-8 pt-16">
    <h1 class="fancy-font text-center burgandy">Book Categories</h1>
    <% @categories.each do |category| %>
      <div class="bg-white container mx-auto p-8 rounded-lg shadow-lg text-center w-1/2 my-8">
        <%= link_to "#{category.name}", category_path(category), class: "fancy-font burgandy no-underline text-2xl" %>
        <div>
          <small class="normal-font"><%= pluralize(category.books.count, "book") %></small>
        </div>
        <div class="py-2">
          <% if master_logged_in? %>
            <%= link_to "Edit Category Name", edit_category_path(category), class: "bg-white block border border-green-darker hover:bg-green-darkest hover:text-green-lightest mx-auto my-4 no-underline normal-font py-3 rounded shadow-lg text-green-darkest w-48 text-center" %>
          <% else %>
            <%= nil %>
          <% end %>
        </div>
      </div>
    <% end %>

    <div class="py-16 text-center">
      <%= link_to "Cancel Request and Return to Reading List", books_path, class: "burgandy fancy-font hover:underline no-underline" %>
    </div>
  </section>
