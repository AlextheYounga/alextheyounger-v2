<!DOCTYPE html>
<html>

  <head>
    <title>alextheyounger.me</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application' %>
    <% if (current_page?(root_path)) %>
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tiny-slider/2.9.3/tiny-slider.css">
      <script src="https://cdnjs.cloudflare.com/ajax/libs/tiny-slider/2.9.2/min/tiny-slider.js"></script>
      <%# <script src="https://cdn.jsdelivr.net/scrollreveal.js/3.3.1/scrollreveal.min.js"></script> %>
      <script src="https://unpkg.com/scrollreveal"></script>
    <% end %>
    <link href="https://fonts.googleapis.com/css?family=Alegreya+Sans:400&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Alegreya+SC&display=swap" rel="stylesheet">

    <% if master_logged_in? %>
      <%= render 'partials/admin_nav' %>
    <% end %>
    <%= render 'partials/navigation' %>
  </head>

  <body>
    <% flash.each do |type, msg| %>
      <div class="flash-msg fixed <%= type %> rounded p-3 mx-auto w-3/4 pin-r pin-l z-50 text-lg my-2">
        <%= msg %>
      </div>
    <% end %>
    <%= yield %>    
  </body>
  <%= render 'partials/footer' %>
  <%= yield :javascripts %>
  <%= javascript_include_tag 'terrain/svg_plotter' %>
  <%= javascript_include_tag 'terrain/terrain' %>
</html>