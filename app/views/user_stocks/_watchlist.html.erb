<table class="<% if current_page?(root_path) %> bg-blue-lighter border-blue-darker <% end %> bg-red-lightest border border-red-darker mx-auto shadow-lg lg:w-3/4">
  <thead class="bg-grey-lightest">
    <tr class="justify-between">
      <th class="p-1 sm:p-4 md:p-6 normal-font text-black text-lg">Name</th>
      <th class="p-1 sm:p-4 md:p-6 normal-font text-black text-lg">Symbol</th>
      <th class="p-1 sm:p-4 md:p-6 normal-font text-black text-lg">Current Price</th>
      <% if logged_in? %>
      <th class="actions p-1 sm:p-4 md:p-6 normal-font text-black text-lg">Actions</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% if @user_stocks %>
    <% @user_stocks.each do |user_stock | %>
    <tr class="justify-between">
      <td class="p-1 sm:p-4 md:p-6 normal-font text-black text-left"><%= user_stock.company_name%></td>
      <td class="p-1 sm:p-4 md:p-6 normal-font text-black <% if current_page?(root_path) %> text-center <% end %>"><%= user_stock.symbol %></td>
      <td class="p-1 sm:p-4 md:p-6 normal-font text-black <% if current_page?(root_path) %> text-center <% end %>"><%= user_stock.latest_price %></td>
      <% if logged_in? %>
      <td class="actions">
        <%= link_to "Delete from WatchList", user_stocks_path(user_stock), method: :delete, 
                data: {confirm: "Are you sure?"}, 
                class: "actions bg-white block border border-red-darker hover:bg-red-darkest burgandy hover:text-red-lightest mx-auto my-4 no-underline normal-font py-3 rounded shadow w-48 sm:mr-4 md:mr-6"%>
      </td>
      <% end %>
    </tr>
    <% end %>
    <% end %>
  </tbody>
</table>