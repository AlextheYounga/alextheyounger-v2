<table class="table table-striped mx-auto container">
    <thead>
      <tr class="justify-between">
        <th class="normal-font text-black">Name</th>
        <th class="normal-font text-black">Symbol</th>
        <th class="normal-font text-black">Current Price</th>
        <% if logged_in? %>
          <th>Actions</th>
        <% end %>
      </tr>
    </thead>
  
<tbody>
  <% if @user_stocks %>
    <% @user_stocks.each do |user_stock | %>
      <tr>
        <td><%= user_stock.company_name%></td>
        <td><%= user_stock.symbol %></td>
        <td><%= user_stock.latest_price %></td>
        <% if logged_in? %>
          <td> <%= link_to "Delete from WatchList", user_stocks_path(user_stock), method: :delete, 
                    data: {confirm: "Are you sure?"}, class: "btn btn-xs btn-danger"%>
          </td>
          <% end %>
      </tr>
      <% end %>
    <% end %>
    </tbody>
  </table> 